<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoffeeTea" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextView.Italic</item>
        <item name="textAppearanceHeadline6">@style/Theme.CoffeeTea.Product.TextView</item>
    </style>


    <style name="Theme.CoffeeTea.ImageView.Store" parent="Theme.CoffeeTea">
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/content_description_media</item>
    </style>

    <style name="Theme.CoffeeTea.Button.Select.Store" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Theme.CoffeeTea.Product.TextView" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/coffee</item>
    </style>

    <style name="TextView.Italic" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">italic</item>
    </style>


</resources>